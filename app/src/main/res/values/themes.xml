<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Uplify" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemIconTint">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="buttonStyle">@style/btn_style</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="btn_style" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="img_style">
        <item name="tint">@color/black</item>
    </style>
</resources>